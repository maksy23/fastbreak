# FE Standards EditorConfig
# https://github.com/RedVentures/fe-standards/tree/master/linting#editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
tab_width = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.txt]
trim_trailing_whitespace = false
